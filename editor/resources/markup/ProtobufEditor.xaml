<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Width="*" Height="*"
	x:Class="Editor.ProtobufEditor"
    Style="{StaticResource DefaultFont}">

    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="80"/>
		</Grid.RowDefinitions>

		<TreeView
			Grid.Row="0"
			Name="trvMenu">

			<TreeView.ItemTemplate>
				<HierarchicalDataTemplate
					DataType="TreeMessage"
					ItemsSource="{Binding Path=Items}">
					
					<TextBlock Text="{Binding Path=Content}" />
				</HierarchicalDataTemplate>

				<DataTemplate 
					DataType="TreeValue">

					<TextBox Text="{Binding Path=Content}"/>
				</DataTemplate>
			</TreeView.ItemTemplate>
		</TreeView>

		<Grid Grid.Row="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Height="*"/>
				<ColumnDefinition Height="*"/>
			</Grid.ColumnDefinitions>

			<Button Grid.Row="0" Grid.Column="0" Content="New"/>
			<Button Grid.Row="0" Grid.Column="2" Content="Remove"/>
			<Button Grid.Row="2" Grid.Column="0" Content="Export"/>
			<Button Grid.Row="2" Grid.Column="2" Content="Import"/>
		</Grid>
    </Grid>
</UserControl>
